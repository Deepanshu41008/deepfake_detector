# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Deepfake Detection API
VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,webm,jpg,jpeg,png,bmp,tiff,wav,mp3,flac,ogg,m4a
UPLOAD_DIR=uploads

# Model Configuration
MODELS_DIR=models
VIDEO_MODEL_PATH=models/video_model.pth
IMAGE_MODEL_PATH=models/image_model.pth
AUDIO_MODEL_PATH=models/audio_model.pth

# Processing Configuration
VIDEO_FRAME_RATE=1
VIDEO_MAX_FRAMES=30
IMAGE_SIZE=[224,224]
AUDIO_SAMPLE_RATE=16000

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./deepfake_detection.db

# Security
SECRET_KEY=enter-your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]